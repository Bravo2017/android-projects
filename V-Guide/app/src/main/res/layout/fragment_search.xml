<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_skye"
            android:layout_marginTop="96dp"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:contentDescription="Main Image"
            android:scaleType="centerInside"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tab_icon_profile_idle3x" />

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_below="@id/iv_skye"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_bar_background_travel"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <EditText
                android:id="@+id/search_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_weight="1"
                style="@style/TextViewAppearance.Body1"
                android:layout_margin="0dp"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:textSize="16dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:hint="Search for something ..."
                android:textColor="@color/material_blue_grey_800" />


            <TextView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="center_vertical"
                android:text="@string/fontello_search"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="18dp"
                tools:ignore="SpUsage" />
        </LinearLayout>



    </RelativeLayout>


</ScrollView>